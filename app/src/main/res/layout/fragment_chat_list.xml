<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chat_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:background="@drawable/chat_bubble"
            android:backgroundTint="@color/chat_bubble_opponent"
            android:gravity="center"
            android:text="안녕하세요"
            android:textColor="@color/primaryTextColor"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/chat_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="10dp"
            android:text="오후 12:00"
            android:textSize="12sp"
            android:textColor="@color/primaryTextColor"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/chat_2"
            app:layout_constraintTop_toTopOf="@+id/chat_2"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintEnd_toStartOf="@id/chat_2"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chat_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_reverse"
            android:backgroundTint="@color/chat_bubble_mine"
            android:gravity="center"
            android:text="9111111111111111111111111111111111119\n2\n3\n4\nsd"
            android:textColor="@color/primaryTextColor"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chat_edit_text"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/time_text_view"
            app:layout_constraintTop_toBottomOf="@+id/chat_1" />



        <EditText
            android:id="@+id/chat_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toTopOf="@+id/send_button"
            app:layout_constraintTop_toBottomOf="@+id/chat_2"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_edit_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
